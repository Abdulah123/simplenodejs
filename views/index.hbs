<div class="row">
    <div class="col-sm-3">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Insert new user</div>
            <div class="card-body text-dark">
                <form action="/insert" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">User Name</label>
                        <input type="text" class="form-control" name = "username">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">User Email</label>
                        <input type="email" class="form-control" name = "usermail">
                    </div>
                    <div class="text-center">
                     <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Get all users</div>
            <div class="card-body text-dark">
                {{#each items}}
                    <div>
                        ID : {{this._id}}
                    </div>
                      <div>
                        UserName : {{this.userName}}
                    </div>
                      <div>
                        UserMail : {{this.userMail}}
                    </div>
                {{/each}}
                <form action="/getusers" method="get">
                    
                    <div class="text-center">
                     <button type="submit" class="btn btn-primary">Get users</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Update user</div>
            <div class="card-body text-dark">
                <form action="/update" method="post">
                    <div class="form-group">
                        <label for="ID">ID</label>
                        <input type="text" class="form-control" name = "id">   
                    </div>
                    <div class="form-group">
                        <label for="User Name">User Name</label>
                        <input type="text" class="form-control" name = "username">   
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">User Email</label>
                        <input type="email" class="form-control" name = "usermail">
                    </div>
                    <div class="text-center">
                     <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


       <div class="col-sm-3">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Delete user</div>
            <div class="card-body text-dark">
                <form action="/delete" method="post">
                    <div class="form-group">
                        <label for="ID">ID</label>
                        <input type="text" class="form-control" name = "id">   
                    </div>
                    <div class="text-center">
                     <button type="button" class="btn btn-outline-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>